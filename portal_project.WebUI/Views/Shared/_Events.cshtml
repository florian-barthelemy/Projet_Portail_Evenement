@model IEnumerable<portal_project.Models.Event>
@if (ViewBag.Error != null)
{
    <h3 class="text-danger">@ViewBag.Error</h3>
}
<div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">


    @foreach (var item in (IEnumerable<portal_project.Models.Event>)ViewData["events"])
    {
        <a href="@Url.Action("Details","Events", new { id= item.Id })">
            <div class="col">
                <div class="card card-cover h-80 overflow-hidden text-white  rounded-5 shadow-lg" style="background-image: url('./images/@Html.DisplayFor(ModelItem => item.PhotosEvent[0].PhotoTitle)'); width: 250px; height: 350px;">
                    <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">

                        <ul class="d-flex list-unstyled mt-auto">

                            <li class="d-flex align-items-center me-3">
                                <i class="bi bi-geo"></i>
                                <small>@Html.DisplayFor(ModelItem => item.Titre)</small>
                            </li>
                            <li class="d-flex align-items-center">
                                <i class="bi bi-calendar-date"></i>
                                <small>@Html.DisplayFor(ModelItem => item.DateDebut)</small>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </a>
    }
</div>
