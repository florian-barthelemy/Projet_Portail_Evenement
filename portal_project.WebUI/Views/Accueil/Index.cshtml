
@{
    ViewBag.Title = "Accueil";
    <link href="~/Scripts/leaflet/leaflet.css" rel="stylesheet" />

}


@section Scripts{
    <script src="~/Scripts/Jquery-3.6.0.js"></script>
    <script src="~/Scripts/leaflet/leaflet.js"></script>
    <script src="~/Scripts/map/map.js"></script>
    <script src="~/Scripts/map/mapIndex.js"></script>
}
<div class="d-inline-flex flex-column align-items-center col-12">
    <img class="" src="~/Content/images/logo.png" alt="Alternate Text" />
    <h1>Accueil</h1>
    <br />
    <br />
    <div class="container col-md-12 col-lg-10 col-xl-8 mh-25 row">
        <div id="map" class="col-sm-12 col-md-12 col-lg-4 col-xl-4 mh-100"></div>
        <br />
        <div id="carouselExampleIndicators" class="carousel slide col-sm-12 col-md-12 col-lg-8" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            </div>
            <div class="carousel-inner" style="height:350px;">
                <div class="carousel-item active">
                    <img src="~/Content/images/concert.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/images/sport.jpg" class="d-block w-100" alt="...">
                </div>

            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>



        <div class="d-none">

        </div>

    </div>

    
    
</div>


