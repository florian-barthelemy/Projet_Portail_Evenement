@model portal_project.Models.Event

<div class="container">
    <div class="row">
        <div id="carouselExampleIndicators" class="carousel slide col-lg-8 mx-auto" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                @*<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>*@
            </div>
            <div class="carousel-inner" style="height:350px;">
                <div class="carousel-item active">
                    <img src="~/Images/@Html.DisplayFor(model => model.PhotosEvent.FirstOrDefault().PhotoTitle)" class="d-block w-100" alt="...">
                </div>
                @*<div class="carousel-item">
                <img src="./images/sport.jpg" class="d-block w-100" alt="...">
                </div>*@
            <div class="carousel-caption d-flex justify-content-between">
                <div class="d-block">
                    <h5 style="color:black">@Html.DisplayFor(model => model.Titre)</h5>
                    <button class="btn rounded-pill border border-dark bg-navbar" style="height:50px">Participer</button>
                    
                </div>
                
                <p>@Html.DisplayFor(model => model.DateDebut)</p>
            </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div class="rounded bg-navbar p-3 text-center col-8 mx-auto mt-1">
        <p>
            @Html.DisplayFor(model => model.Description)
        </p>
    </div>
    
        
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
